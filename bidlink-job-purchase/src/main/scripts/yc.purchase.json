// 方式1：直接在head界面操作，yc_v1/purchase/_mapping POST
// 方式2：curl -XPOST http://dcsearch.api.yuecai.com/yc_v1/purchase/_mapping -d'
{
  "purchase": {
    "properties": {
      "bidTradingVolume": {
        "type": "string",
        "index": "not_analyzed"
      },
      "companySiteAlias": {
        "type": "string",
        "index": "not_analyzed"
      },
      "longTradingVolume": {
        "type": "long"
      },
      "id": {
        "type": "string",
        "index": "not_analyzed"
      },
      "purchaseName": {
        "type": "string",
        "analyzer": "ik"
      },
      "purchaseTradingVolume": {
        "type": "string",
        "index": "not_analyzed"
      },
      "syncTime": {
        "type": "date",
        "format": "yyyy-MM-dd HH:mm:ss||yyyy-MM-dd||epoch_millis"
      },
      "tradingVolume": {
        "type": "string",
        "index": "not_analyzed"
      },
      "wwwStationAlias": {
        "type": "string",
        "index": "not_analyzed"
      }
    }
  }
}