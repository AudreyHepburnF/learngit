{
  "deal_supplier_project": {
    "properties": {
      "id": {
        "type": "string",
        "index": "not_analyzed"
      },
      "companyId": {
        "type": "string",
        "index": "not_analyzed"
      },
      "companyName": {
        "type": "string",
        "analyzer": "ik"
      },
      "companyNameNotAnalyzed": {
        "type": "string",
        "index": "not_analyzed"
      },
      "supplierId": {
        "type": "string",
        "index": "not_analyzed"
      },
      "supplierNameNotAnalyzed": {
        "type": "string",
        "index": "not_analyzed"
      },
      "projectId": {
        "type": "string",
        "index": "not_analyzed"
      },
      "projectType": {
        "type": "integer"
      },
      "projectName": {
        "type": "string",
        "analyzer": "ik"
      },
      "projectNameNotAnalyzed": {
        "type": "string",
        "index": "not_analyzed"
      },
      "projectCode": {
        "type": "string",
        "index": "not_analyzed"
      },
      "dealTotalPrice": {
        "type": "string",
        "index": "not_analyzed"
      },
      "longDealTotalPrice": {
        "type": "long"
      },
      "dealTime": {
        "type": "date",
        "format": "yyyy-MM-dd HH:mm:ss||yyyy-MM-dd||epoch_millis"
      },
      "syncTime": {
        "type": "date",
        "format": "yyyy-MM-dd HH:mm:ss||yyyy-MM-dd||epoch_millis"
