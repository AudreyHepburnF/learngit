// 方式1：直接在head界面操作，yc_test/project/_mapping POST
// 方式2：curl -XPOST http://dcsearch.api.yuecai.com/yc_test/project/_mapping -d'
{
  "project": {
    "properties": {
      "companyId": {
        "type": "text"
      },
      "name": {
        "type": "text"
      },
      "id": {
        "type": "text"
      },
      "totalPrice": {
        "type": "text"
      },
      "longTotalPrice": {
        "type": "long"
      },
      "syncTime": {
        "type": "date",
        "format": "yyyy-MM-dd HH:mm:ss||yyyy-MM-dd||epoch_millis"
      },
      "createTime": {
        "type": "date",
        "format": "yyyy-MM-dd HH:mm:ss||yyyy-MM-dd||epoch_millis"
      },
      "projectType": {
        "type": "integer"
      },
      "platformSource": {
        "type": "integer"
      }
    }
  }
}
