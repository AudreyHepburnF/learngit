// 方式1：直接在head界面操作，yc_v1/supplier_product/_mapping POST
// 方式2：curl -XPOST http://dcsearch.api.yuecai.com/yc_v1/supplier_product/_mapping -d'
{
  "supplier_product": {
    "properties": {
      "createTime": {
        "type": "date",
        "format": "yyyy-MM-dd HH:mm:ss||yyyy-MM-dd||epoch_millis"
      },
      "updateTime": {
        "type": "date",
        "format": "yyyy-MM-dd HH:mm:ss||yyyy-MM-dd||epoch_millis"
      },
      "syncTime": {
        "type": "date",
        "format": "yyyy-MM-dd HH:mm:ss||yyyy-MM-dd||epoch_millis"
      },
      "core": {
        "type": "integer"
      },
      "directoryNameAlias": {
        "type": "string",
        "analyzer": "ik"
      },
      "id": {
        "type": "string",
        "index": "not_analyzed"
      },
      "supplierDirectoryRel": {
        "type": "integer"
      },
      "supplierId": {
        "type": "string",
        "index": "not_analyzed"
      },
      "supplierName": {
        "type": "string",
        "analyzer": "ik"
      },
      "companyLogo": {
        "type": "string",
        "index": "not_analyzed"
      }
    }
  }
}